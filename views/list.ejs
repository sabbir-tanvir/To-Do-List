<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>

    </div>
    <div class="box" id="">
        <% for (var i=0; i<newListItems.length; i++) { %>

            <div class="item">
                <input type="checkbox">
                <p><%= newListItems[i] %></p>

            </div>

            <% } %>


            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="New Item">
                <button class="first-button" type="submit" name="list" value= <%= listTitle %> >+</button>
            </form>
    </div>
    <div class="button-container">

        <% if (showNextButton) { %>
            <button type="button" id="Last" class="second-button" onclick="
              if (window.location.pathname === '/') {
                location.href='/work';
              } else {
                location.href='/';
              }
            ">
              Next
            </button>
          <% } %>
          
          

    </div>

    <%- include("footer") -%>